<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.moish.carrentforcompany.controller.MainActivity">


    <LinearLayout         android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/addCarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add a car" />
        <Button
            android:id="@+id/removeCarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="remove a car" />
        <Button
            android:id="@+id/updateCarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update a car" />
        <Button
            android:id="@+id/showCarsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show all the cars" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
